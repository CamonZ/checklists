.page-masthead
  %h1
    Sign up
  %p
    Create a new user and start using the app
.container
  .col-sm-8
    = form_for resource, as: resource_name, url: registration_path(resource_name), html: {role: "form", :class => "form-horizontal clearfix"} do |f|
      = devise_error_messages!
      .form-group
        = f.label :email, :class => "col-sm-4 control-label"
        .col-sm-8
          = f.email_field :email, autofocus: true, :class => "form-control", placeholder: "Enter Email"
      .form-group
        = f.label :password, :class => "col-sm-4 control-label"
        .col-sm-8
          = f.password_field :password, autocomplete: "off", :class => "form-control", placeholder: "Password"
      .form-group
        = f.label :password_confirmation, :class => "col-sm-4 control-label"
        .col-sm-8
          = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", placeholder: "Repeat Password"
      = f.submit "Sign up", :class => "btn btn-default pull-right"
    %br
    %p.pull-right{style: "text-align: right"}
      Already registered?
      %br
      = render "devise/shared/links"

